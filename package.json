{
  "name": "subtopia-js",
  "version": "2.0.1",
  "description": "Subtopia SDK for JavaScript",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "info@subtopia.io",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "vite --host --open",
    "build": "tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "watch": "tsc && vite build --watch",
    "test:integration": "vitest run --coverage",
    "localnet:start": "pipx run algokit localnet start",
    "localnet:stop": "pipx run algokit localnet start",
    "lint:scripts": "eslint src --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "docs": "npx typedoc src/index.ts --excludePrivate --excludeExternals --exclude '**/adminClient.ts'",
    "commit": "cz",
    "release": "semantic-release"
  },
  "dependencies": {
    "algosdk": "2.3.0",
    "beaker-ts": "^0.1.2"
  },
  "devDependencies": {
    "@feki.de/semantic-release-yarn": "1.0.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dts-bundle-generator": "^8.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.1",
    "semantic-release": "21.0.3",
    "stylelint": "^15.0.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.31.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@feki.de/semantic-release-yarn",
      "@semantic-release/github"
    ],
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": "rc"
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@feki.de/semantic-release-yarn",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@feki.de/semantic-release-yarn",
      "@semantic-release/git"
    ]
  },
  "lint-staged": {
    "src/**/**/*.{ts,tsx}": [
      "prettier . --write",
      "git add"
    ]
  }
}
